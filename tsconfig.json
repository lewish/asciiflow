{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#asciiflow/*": ["*", "bazel-bin/*", "bazel-genfiles/*"],
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ESNext",
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["es2021", "dom"],
    "esModuleInterop": true,
    "declaration": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["bazel-*", "node_modules"]
}
